<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBox
        android:id="@+id/ckCuocDua_3"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/ckCuocDua_2"
        android:layout_above="@id/ckCuocDua_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/ckCuocDua_1"
        android:layout_above="@id/ckCuocDua_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:max="100"
        android:focusableInTouchMode="true"
        android:id="@+id/seekBarCuocDua_3"
        android:thumb="@drawable/wow"
        android:layout_toRightOf="@id/ckCuocDua_3"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:max="100"
        android:id="@+id/seekBarCuocDua_2"
        android:thumb="@drawable/what"
        android:layout_toRightOf="@id/ckCuocDua_2"
        android:layout_above="@id/seekBarCuocDua_3"
        android:layout_marginVertical="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:max="100"
        android:id="@+id/seekBarCuocDua_1"
        android:thumb="@drawable/lewlew"
        android:layout_toRightOf="@id/ckCuocDua_1"
        android:layout_above="@id/seekBarCuocDua_2"
        android:layout_marginVertical="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/who_win"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/txtScore"
        android:text="100"
        android:textSize="30dp"
        android:textColor="#9A0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btnPlay"
        android:scaleType="fitXY"
        android:src="@drawable/play"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</RelativeLayout>