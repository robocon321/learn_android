<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtGlobal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/editGlobalUname"
        android:textSize="30dp"
        android:text="@string/form" />

    <EditText
        android:id="@+id/editGlobalUname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editGlobalPwd"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:hint="@string/uname" />

    <EditText
        android:id="@+id/editGlobalPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/pwd"
        android:layout_centerInParent="true"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnGlobal"
        android:layout_below="@id/editGlobalPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/login" />

</RelativeLayout>